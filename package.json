{
  "name": "grapts",
  "version": "1.0.0",
  "description": "Government Resource Allocation & Project Tracking System",
  "private": true,
  "scripts": {
    "main": "server/index.js",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install && cd ..",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm start",
    "start": "cd server && node index.js",
    "prebuild": "cd client && npm install",
    "build": "cd client && npm run build",
    "postinstall": "cd client && npm install",
    "build:full": "npm install:all && npm run build",
    "test": "cd client && npm test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
